#!/bin/sh

# ----------------------------------------------------------------------
#  $Id$
#
#  trunk0 I/O statistics module for dbar
# ----------------------------------------------------------------------

ifstat -n -b -i trunk0 2 |
awk '{printf("[↓%2.0fMb/s ↑%2.0fMb/s]\n", $1 / 1000, $2 / 1000)}'
