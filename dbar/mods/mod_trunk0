#!/bin/sh

# ----------------------------------------------------------------------
#  $Id$
#
#  trunk0 I/O statistics module for dbar
# ----------------------------------------------------------------------

ifstat -n -i trunk0  |
awk '{printf("[trunk0:  ↓ %3.1f MB/s  ↑ %3.1f MB/s]\n", $1 / 1000, $2 / 1000)}'
