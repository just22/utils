#!/bin/sh

# ----------------------------------------------------------------------
#  $Id$
#
#  Send ics attachment from remind calendar
# ----------------------------------------------------------------------

# No output msgs, please
exec >/dev/null 2>&1

EVENT=$(remind -s2 ~/.reminders $(date) | dmenu -p ComingSoon: "$@" -l 20)

if [ -n "$EVENT" ]; then
        rem2ics -do > /tmp/event.ics
        xterm -e mutt -a /tmp/event.ics
fi
