#!/bin/sh

# ----------------------------------------------------------------------
#  $Id$
#
#  Logout from current session (or suspend/reboot/poweroff the machine)
#  using dmenu
# ----------------------------------------------------------------------

# No output msgs, please
exec >/dev/null 2>&1

set -A MENU_ITEMS \
        "Logout" \
        "Suspend" \
        "Hibernate" \
        "Reboot" \
        "Poweroff"

case "$(printf "%s\n" "${MENU_ITEMS[@]}" |
        dmenu-cust -p Quit: "$@")" in
Logout)
        case "$XSESSION_CMD" in
        *fluxbox*)
                fluxbox-remote Exit
                ;;
        *xfce*)
                xfce4-session-logout --logout --fast
                ;;
        dwm*)
                pkill dwm
                ;;
        cwm|twm)
                pkill "$XSESSION_CMD"
                ;;
        *openbox*)
                openbox --exit
                ;;
        *)
                ;;
        esac
        ;;
Suspend)
        /usr/sbin/zzz
        ;;
Hibernate)
        /usr/sbin/ZZZ
        ;;
Reboot)
        sudo /sbin/reboot
        ;;
Poweroff)
        sudo /sbin/shutdown -p now
        ;;
esac
