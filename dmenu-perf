#!/bin/sh

# ----------------------------------------------------------------------
#  $Id$
#
#  Simple timer
# ----------------------------------------------------------------------

# No output msgs, please
exec >/dev/null 2>&1

MENU_ITEMS="\
auto\n\
high"

POL=$(echo $MENU_ITEMS |
    dmenu-cust -p "PerfPolicy [$(sysctl -n hw.perfpolicy)]:" -i "$@")

[ -n "$POL" ] && /usr/bin/doas /sbin/sysctl hw.perfpolicy="$POL"
