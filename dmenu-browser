#!/bin/sh

# File:         dmenu-browser
# Purpose:      Select the browser to launch using dmenu
# Author:       A. DE LAURENZIS

set -A MENU_ITEMS \
        "firefox" \
        "chrome" \
        "surf-launcher"

printf "%s\n" "${MENU_ITEMS[@]}" |
        dmenu -p "Network browser:" "$@" | ${SHELL:-/bin/sh}
