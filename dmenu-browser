#!/bin/sh

# ----------------------------------------------------------------------
#  $Id$
#
#  Select browser using dmenu
# ----------------------------------------------------------------------

_array() {
        case "$SH_VERSION" in
        *KSH*)
                a="$1"; shift
                set -A "$a" "$@"
                ;;
        *)
                eval $1='("${@:2}")'
        esac
}

_array MENU_ITEMS \
        "firefox" \
        "chrome" \
        "surf-launcher"

printf "%s\n" "${MENU_ITEMS[@]}" |
        dmenu-cust -p "Network browser:" "$@" | ${SHELL:-/bin/sh}
