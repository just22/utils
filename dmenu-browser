#!/bin/sh

# ----------------------------------------------------------------------
#  $Id$
#
#  Select browser using dmenu
# ----------------------------------------------------------------------

set -A MENU_ITEMS \
        "firefox" \
        "chrome" \
        "surf-launcher"

printf "%s\n" "${MENU_ITEMS[@]}" |
        dmenu-cust -p "Network browser:" "$@" | ${SHELL:-/bin/sh}
