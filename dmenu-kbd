#!/bin/sh

# ----------------------------------------------------------------------
#  $Id$
#
#  Keyboard layout switcher
# ----------------------------------------------------------------------

# No output msgs, please
exec >/dev/null 2>&1

MENU_ITEMS="\
us\n\
it"

cl="$(setxkbmap -query | grep layout)"
nl="$(echo $MENU_ITEMS | dmenu-cust -p "Keyboard [${cl##* }]:" "$@")"

[ -n "$nl" ] && setxkbmap "$nl"

